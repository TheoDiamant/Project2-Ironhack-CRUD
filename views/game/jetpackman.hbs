    </div>
    <div id="comment">
      {{!-- {{#if userInSession}} --}}
      <form id="comment-form" action="/comment" method="post">
      <div id="list-comments">
          Comments from other players:
          <div class="com-user">
          {{#each comments}}
          <h3>{{this.user.username}}</h3>
            <p>{{this.content}}</p>
      <hr>  
          {{/each}}
          </div>
      </div>
      <div>
          <input type="text" name="content" placeholder="This game is great !" />
          <button type="submit">Add a comment</button>
          </div>
      </form>
      {{!-- {{/if}} --}}
    </div>
  
  </div>



